  "layout": [{
    "key": "accounts",
    "type": "tabarray",
    "title": "{{ value.name || 'new account' }}",
    "items": [
      "accounts[].name",
      "accounts[].user",
      "accounts[].passwd",
      "accounts[].language",
      {
        "key": "accounts[]",
        "type": "section",
        "title": "Buttons",
        "expandable": true,
        "expanded": false,
        "items": [
          "accounts[].displayDevicePresets",
          {
            "key": "accounts[].buttons",
            "type": "tabarray",
            "title": "{{ value.name || 'new button' }}",
            "items": [
              "accounts[].buttons[].name",
              "accounts[].buttons[].mode",
              "accounts[].buttons[].displayType"
            ]
          }
        ]
      },
      {
        "key": "accounts[]",
        "type": "section",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "items": [
          "accounts[].enableDebugMode",
          "accounts[].disableLogInfo",
          "accounts[].disableLogDeviceInfo",
          "accounts[].displayMode"
        ]
      },
      {
        "key": "accounts[]",
        "type": "section",
        "title": "MQTT",
        "expandable": true,
        "expanded": false,
        "items": [
          "accounts[].enableMqtt",
          "accounts[].mqttHost",
          "accounts[].mqttPort",
          "accounts[].mqttPrefix",
          "accounts[].mqttAuth",
          "accounts[].mqttUser",
          "accounts[].mqttPasswd",
          "accounts[].mqttDebug"
        ]
      }
    ]
