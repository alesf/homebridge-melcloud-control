              "title": "Prefix",
              "type": "string",
              "placeholder": "home/account",
              "required": false,
              "description": "Here set the prefix.",
              "condition": {
                "functionBody": "return model.accounts[arrayIndices].enableMqtt === true;"
              }
            },
            "mqttAuth": {
